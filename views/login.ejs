<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4" src="img/auth-image-index.jpeg" alt="" width="auto" height="240">
    <h1 class="display-5 fw-bold">Login Here</h1>
    <p class="display-6 fw-bold mt-3 text-danger">
        <%= messages?.error?? ""%>
    </p>
    <div class="col-lg-3 mx-auto">
        <form action="/login" method="POST">
            <div class="mb-2">
                <input type="text" class="form-control" name="username" placeholder="Username" required>
            </div>
            <div class="mb-2">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <div class="mb-2"><button type="submit" class="btn btn-primary mt-2">SignIn</button></div>
            <a href="/register" class="btn btn-secondary mt-2">Signup</a>
            <a href="/" class="btn btn-success mt-2">Home</a>
        </form>
    </div>
</div>